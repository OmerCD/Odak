<Application x:Class="ListviewProje.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ListviewProje"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Texts.xaml"/>
                <ResourceDictionary Source="Views/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Views/Styles/Animations.xaml"/>
                <ResourceDictionary Source="Views/Styles/Others.xaml"/>
                <ResourceDictionary Source="Views/Styles/Images.xaml"/>
                <ResourceDictionary Source="Views/Styles/Icons.xaml"/>
                <ResourceDictionary Source="Views/Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
